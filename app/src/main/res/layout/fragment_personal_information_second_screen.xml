<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="18dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/progress_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/item_progress" />

        <View
            android:id="@+id/progress_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="5dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/item_progress" />

        <View
            android:id="@+id/progress_3"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:backgroundTint="#F0F1FC"
            android:layout_marginEnd="4dp"
            android:background="@drawable/item_progress" />

        <View
            android:id="@+id/progress_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:backgroundTint="#F0F1FC"
            android:layout_height="5dp"
            android:background="@drawable/item_progress" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell us about yourself ðŸŽ“"
            android:textSize="24sp"
            android:fontFamily="@font/catamaran_bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/catamaran_bold"
            android:text="What is your name"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:textColorHint="#BCC0C9"
            app:boxBackgroundColor="#F2F3F5"
            app:boxCornerRadiusBottomEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusTopStart="22dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintEnabled="false"
            app:prefixText="+998 "
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:prefixTextAppearance="@style/TextAppearance.AppCompat.Medium">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/catamaran_bold"
            android:text="Your birthday"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/surnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColorHint="#BCC0C9"
            app:boxBackgroundColor="#F2F3F5"
            android:layout_marginTop="1dp"
            app:boxCornerRadiusBottomEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusTopStart="22dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintEnabled="false"
            app:prefixText="+998 "
            app:prefixTextAppearance="@style/TextAppearance.AppCompat.Medium">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:hint="dd / mm / yyyy"
                android:inputType="phone"
                android:maxLength="9"
                android:padding="12dp"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButton"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/primary_button_shape"
        android:clickable="true"
        android:fontFamily="@font/catamaran"
        android:foreground="?attr/selectableItemBackground"
        android:text="Next"
        tools:ignore="UnusedAttribute" />


</LinearLayout>